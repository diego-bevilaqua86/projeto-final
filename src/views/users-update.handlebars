{{#if user}}
{{#with user}}
<div class="container my-5">
  <div class="row mb-3">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Cadastro de usuário</h1>
        <a class="btn btn-link" href="./home">Voltar</a>
      </div>
    </div>
  </div>
  <form action="../users-patch" method="POST" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="id" value="{{id}}">
    <div class="row mb-3">
      <div class="col-2">
        <label for="name" class="form-label">Nome *</label>
      </div>
      <div class="col-10">
        <input type="text" class="form-control" id="name" name="name" value="{{name}}" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-2">
        <label for="birthDate" class="form-label">Data de nascimento *</label>
      </div>
      <div class="col-10">
        <input type="date" class="form-control" id="birthDate" name="birthDate" value="{{birthDate}}" required>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-2">
        <label for="email" class="form-label">E-mail</label>
      </div>
      <div class="col-10">
        <input type="email" class="form-control" id="email" name="email" value="{{email}}">
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-6">
        <a class="btn btn-link" href="../users-list">Cancelar</a>
      </div>
      <div class="col-6">
        <button type="submit" class="btn btn-primary">Atualizar</button>
      </div>
  </form>
</div>
{{/with}}
{{else}}
<div class="container my-5">
  <div class="row mb-3">
    <div class="col">
      <div class="d-flex justify-content-between align-items-center">
        <h1>Usuário não encontrado!</h1>
        <a class="btn btn-link" href="./home">Voltar</a>
      </div>
    </div>
  </div>
</div>
{{/if}}